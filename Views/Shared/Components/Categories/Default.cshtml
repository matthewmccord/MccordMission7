@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNumber="1"
       class="btn btn-outline-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNumber="1" 
           class="btn @(ViewBag.ChoiceCategory == c ? "btn-primary" :"btn-outline-secondary")">@c</a>
    }
</div>